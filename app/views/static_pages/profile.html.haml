%section
	.profile-panel
		.profile-title
			%h1= @user.username
			%p= link_to 'edit', edit_user_registration_path if @user.id == current_user.id
			%p= friend_status(@user.id)
			%p= check_request(@user)
		.profile-content
			%p
				Email: 
				= @user.email
			%p
				Number of Posts:
				= @user.posts.count
			%p
				About Me:
				- if @user.bio.nil? && @user.id == current_user.id
					= link_to "add about", edit_user_registration_path
				- else
					= @user.bio
